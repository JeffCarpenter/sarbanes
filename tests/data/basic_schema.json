{
  "$id": "https://example.com/polygon",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "$defs": {
    "PointHolder": {
      "type": "object",
      "properties": {
        "point": { "$ref": "#/$defs/Point" }
      },
      "required": ["point"]
    },
    "Point": {
      "type": "object",
      "properties": {
        "x": { "type": "number" },
        "y": { "type": "number" }
      },
      "additionalProperties": false,
      "required": ["x", "y"]
    }
  }
}
